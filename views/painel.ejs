  </nav>

  <div id="wrapper">

    <!-- Sidebar -->
    <ul class="sidebar navbar-nav">
      <li class="nav-item active">
        <a class="nav-link" href="/painel">
          <i class="fas fa-fw fa-tachometer-alt"></i>
          <span>Painel</span>
        </a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="painel/config">
          <i class="fas fa-fw fa-chart-area"></i>
          <span>Configuração</span></a>
      </li>
    </ul>

    <div id="content-wrapper">

      <div class="container-fluid">

        <!-- Breadcrumbs-->
        <ol class="breadcrumb">
          <li class="breadcrumb-item">
            <a href="#">Dashboard</a>
          </li>
          <li class="breadcrumb-item active">Overview</li>
        </ol>

        <!-- Icon Cards-->
        <div class="row">
          <div class="col-xl-3 col-sm-6 mb-3">
            <div class="card text-white bg-primary o-hidden h-100">
              <div class="card-body">
                <div class="card-body-icon">
                  <i class="fas fa-fw fa-shopping-cart"></i>
                  <!-- <i class="fas fa-fw fa-comments"></i> -->
                </div>
                <div class="mr-5"><%= bikeAlugada %></div>
              </div>
              <div class="card-footer text-white clearfix small z-1">
                <span class="float-left">Bicicleta em Aluguel</span>
                <span class="float-right">
                  <i class="fas fa-angle-right"></i>
                </span>
              </div>
            </div>
          </div>
          <div class="col-xl-3 col-sm-6 mb-3">
            <div class="card text-white bg-warning o-hidden h-100">
              <div class="card-body">
                <div class="card-body-icon">
                  <i class="fas fa-fw fa-list"></i>
                </div>
                <div class="mr-5"><%= numBikesAlugadas %></div>
              </div>
              <div class="card-footer text-white clearfix small z-1">
                <span class="float-left">N° de Bikes Alugadas</span>
                <span class="float-right">
                  <i class="fas fa-angle-right"></i>
                </span>
              </div>
            </div>
          </div>
          <div class="col-xl-3 col-sm-6 mb-3">
            <div class="card text-white bg-success o-hidden h-100">
              <div class="card-body">
                <div class="card-body-icon">
                  <i class="fas fa-cash-register"></i>
                </div>
                <div class="mr-5"><%= precoPlano %></div>
              </div>
              <a class="card-footer text-white clearfix small z-1" href="#">
                <span class="float-left">Preço do Plano</span>
                <span class="float-right">
                  <i class="fas fa-angle-right"></i>
                </span>
              </a>
            </div>
          </div>
          <div class="col-xl-3 col-sm-6 mb-3">
            <div class="card text-white bg-danger o-hidden h-100">
              <div class="card-body">
                <div class="card-body-icon">
                  <i class="fas fa-box-open"></i>
                  <!-- <i class="fas fa-fw fa-life-ring"></i> -->
                </div>
                <div class="mr-5"><%= nomePlano %></div>
              </div>
              <a class="card-footer text-white clearfix small z-1" href="#">
                <span class="float-left">Plano</span>
                <span class="float-right">
                  <i class="fas fa-angle-right"></i>
                </span>
              </a>
            </div>
          </div>
        </div>

        <!-- Alugar Bicicleta-->
        <div class="card mb-3">
          <div class="card-header">
            <i class="fas fa-chart-area"></i>
            Alugar Bicicleta</div>
          <div class="card-body">
            <div class="contaiener">
              
                <form action="/painel/alugarBike" method="post" id="formAlugarBike">
                  <div id="msgAluguel" class="alert alert-warning alert-dismissible fade show" style="display: none" role="alert">
                    <p></p>  
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                          <span aria-hidden="true">&times;</span>
                      </button>
                  </div>
                  <div class="row">
                  <div class="form-group col-6">
                    <label for="selectEstacao">Estação:</label>
                    <select class="custom-select" name="nomeEstacao" id="selectEstacao">
                      <%- include('./partials/nomeEstacao') %>
                      </select>
                  </div>
                  <div class="form-group col-6">
                    <label for="numBikesDisponiveis">Bicicletas Disponíveis: </label>
                    <input type="text" class="form-control" name="numBikesDisponiveis" id="numBikesDisponiveis" readonly>
                  </div>
                  <div class="col-12 text-center">
                    <button type="submit" class="btn btn-primary" >Alugar</button>
                  </div>
                </div>
                </form>
              
            </div>
          </div>
          <div class="card-footer small text-muted"><span id="date"></span> </div>
        </div>

        <!-- Devolver Bicicleta -->
        <div class="card mb-3">
          <div class="card-header">
            <i class="fas fa-chart-area"></i>
            Devolver Bicicleta</div>

            <div class="card-body">
              <div class="container">
                <div id="msgDevolucao" class="alert alert-warning alert-dismissible fade show" style="display: none" role="alert">
                  <p></p>  
                  <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
              </div>

              <form action="/painel/devolverbike" method="post" id="formDevolveBike">
                <div class="text-center">
                  <button type="submit" class="btn btn-primary">Devolver</button>
                </div>
              </form>

            </div>
          </div>
        </div>

        <!-- Historico de Viagens -->
        <div class="card mb-3">
          <div class="card-header">
            <i class="fas fa-table"></i>
            Histórico de Viagens
          </div>
          <div class="card-body">
            <div class="table-responsive">
              <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                  <tr>
                    <th>codBicicleta</th>
                    <th>Data Aluguel</th>
                    <th>Data Devolução</th>
                  </tr>
                </thead>

                <tbody>
                  <%- include('./partials/historicoBike') %>
                </tbody>
              </table>
            </div>
          </div>
          <div class="card-footer small text-muted" id="dateHist"></div>
        </div>

      </div>
      <!-- /.container-fluid -->

      <!-- Sticky Footer -->
      <footer class="sticky-footer">
        <div class="container my-auto">
          <div class="copyright text-center my-auto">
            <span>Copyright © BikeMais 2019</span>
          </div>
        </div>
      </footer>

    </div>
    <!-- /.content-wrapper -->

  </div>
  <!-- /#wrapper -->

  <!-- Scroll to Top Button-->
  <a class="scroll-to-top rounded" href="#page-top">
    <i class="fas fa-angle-up"></i>
  </a>

  <!-- Logout Modal-->
  <div class="modal fade" id="logoutModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Ready to Leave?</h5>
          <button class="close" type="button" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">×</span>
          </button>
        </div>
        <div class="modal-body">Select "Logout" below if you are ready to end your current session.</div>
        <div class="modal-footer">
          <button class="btn btn-secondary" type="button" data-dismiss="modal">Cancel</button>
          <a class="btn btn-primary" href="login.html">Logout</a>
        </div>
      </div>
    </div>
  </div>

<!-- Bootstrap JS -->
<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>

  <!-- Custom scripts for all pages-->
  <script src="../javascripts/dashboard.js"></script>

  <script src="https://code.jquery.com/jquery-3.4.1.min.js" integrity="sha256-CSXorXvZcTkaix6Yvo6HppcZGetbYMGWSFlBw8HfCJo=" crossorigin="anonymous"></script>

</body>

  <!-- Busca quantidade de Bikes disponiveis por estação -->
  <script>
    $('#selectEstacao').change(function (ev) {
      $.get('/painel/config/bikeDisponivel', {nomeEstacao: $('#selectEstacao').val() }, function (data, status) {
          console.log(data);
          $('#numBikesDisponiveis').val(data);
      });

      let dt = new Date();

      $('#date').text('Atualizado em '+ dt.getHours() + ':' + dt.getMinutes());
    });
  </script>

  <!-- Insere o horario da atualização no tabela de historico aluguel -->
  <script>
    $(document).ready(function() {
      let dt = new Date();
      $('#dateHist').text('Atualizado em '+ dt.getHours() + ':' + dt.getMinutes());
   
    });
  </script>

  <!-- Script Para Alugar Bike -->
  <script>
    $('#formAlugarBike').on('submit', (ev) => {
      ev.preventDefault();
      ev.stopPropagation();

      $.post('/painel/alugarBike', $('#formAlugarBike').serialize(), (data) => {
          console.log(data.msg);
          $('#msgAluguel p').text(data.msg);
          $('#msgAluguel').show();
      })

    });
  </script>

  <!-- Script Devolve Bike -->
  <script>
    $('#formDevolveBike').on('submit', (ev) => {
      ev.preventDefault();
      ev.stopPropagation();

      $.post('/painel/devolverbike', (data) => {
        console.log(data);
        $('#msgDevolucao p').text(data.msgDevolucao);
        $('#msgDevolucao').show();
      })
    })
  </script>

</html>
