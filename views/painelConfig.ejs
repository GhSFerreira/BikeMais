    <div id="wrapper">

        <!-- Sidebar -->
        <ul class="sidebar navbar-nav">
            <li class="nav-item">
                <a class="nav-link" href="/painel">
                <i class="fas fa-fw fa-tachometer-alt"></i>
                <span>Painel</span>
                </a>
            </li>
            <li class="nav-item active">
                <a class="nav-link" href="/painel/config">
                <i class="fas fa-fw fa-chart-area"></i>
                <span>Configuração</span></a>
            </li>
        </ul>
      
        <!-- Main Content -->
        <div id="content-wrapper">
            <div class="container-fluid">

                <!-- Cartao de Credito -->
                <div class="card mb-3">
                    <div class="card-header">
                        <i class="fas fa-chart-area"></i>
                        Cartao de Crédito
                    </div>
                    <div class="card-body">
                        <div class="container">
                            <form action="/painel/editcreditcard" method="post" id="formEditCartao">
                                <div class="row justify-content-center">
                                    <div class="col-12 form-group">
                                        <label for="cartaoCredito">Cartao de Crédito</label>
                                        <input type="text" class="form-control" id="cartaoCredito" readonly>
                                    </div>
                                    <div class="form-group col-12 pt-3"> 
                                        <label for="creditCardEdit">Alterar Cartao de Crédito</label>
                                        <input type="text" id="creditCardEdit" name="cartaoDeCredito" class="form-control" data-mask="0000 0000 0000 0000" required>
                                    </div>
                                    <button type="submit" class="btn btn-primary">Atualizar</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>

                <!-- Plano -->
                <div class="card mb-3">
                    <div class="card-header">
                        <i class="fas fa-chart-area"></i>
                        Plano
                    </div>

                    <div class="card-body">
                        <div class="container">
                            <form action="" method="post">
                                <div class="row">
                                    <div class="form-group col-12">
                                        <label for="">Plano: </label>
                                        <select class="custom-select" name="plano" id="selectPlano">
                                            <option selected value="p">P</option>
                                            <option value="m">M</option>
                                            <option value="g">G</option>
                                        </select>
                                    </div>
                                    <div class="col-12 text-center">
                                        <button type="submit" class="btn btn-primary">Alterar</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>

    <!-- Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.4.1.min.js" integrity="sha256-CSXorXvZcTkaix6Yvo6HppcZGetbYMGWSFlBw8HfCJo=" crossorigin="anonymous"></script>
