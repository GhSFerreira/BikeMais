    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>


    <!-- Custom scripts for all pages-->
    <script src="../javascripts/dashboard.js"></script>

    <!-- Maks CDN -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.mask/1.14.15/jquery.mask.min.js"></script>

    <!-- Post Atualizar Cartao de Credito -->
    <script>
        $('#formEditCartao').on('submit', function(ev) {
            ev.preventDefault();
            ev.stopPropagation();

            let dataForm = $('#formEditCartao').serialize();

            $.post('/painel/editcreditcard',dataForm, function(result) {
                console.log(result);
            });
        });
    </script>

    <!-- Insere o numero do cartao no visor -->
    <script>
        $.get('/painel/numcartaodecredito', function(data) {
            console.log(data);
           $('#cartaoCredito').val(data);
        });
    </script>
</body>
